<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <Appenders>
        <!-- Console principale per Spring -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level [SpringBoot] %logger{36} - %msg%n"/>
        </Console>

        <!-- File separato per MATSim -->
        <File name="MatsimFile" fileName="logs/matsim.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level [MATSim] %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- MATSim core log solo su file, livello WARN -->
        <Logger name="org.matsim" level="DEBUG" additivity="false">
            <AppenderRef ref="MatsimFile"/>
        </Logger>

        <Logger name="org.matsim.application" level="DEBUG" additivity="false">
            <AppenderRef ref="MatsimFile"/>
        </Logger>

        <Logger name="org.matsim.core" level="DEBUG" additivity="false">
            <AppenderRef ref="MatsimFile"/>
        </Logger>

        <Logger name="com.ctc.wstx" level="DEBUG" additivity="false">
            <AppenderRef ref="MatsimFile"/>
        </Logger>

        <!-- MATSim monitor custom (DEBUG) -->
        <Logger name="org.matsim.CustomMonitor" level="DEBUG" additivity="false">
            <AppenderRef ref="MatsimFile"/>
        </Logger>

        <!-- Spring Boot log -->
        <Logger name="org.springboot" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root log fallback -->
        <Root level="WARN">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
